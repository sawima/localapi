extends ../layouts/auth_template

block content
  .login-page
    .col-md-4.col-md-offset-7.login-panel
      h4 登录
      form.form-horizontal(method="post")
        .form-group
          label.col-lg-2.control-label(for='inputEmail1') 邮箱
          .col-lg-10
            input#inputEmail1.form-control(type='email',name='email' placeholder='邮箱',required,autofocus)
        .form-group
          label.col-lg-2.control-label(for='inputPassword1') 密码
          .col-lg-10
            input#inputPassword1.form-control(type='password',name='password' placeholder='密码',required)
